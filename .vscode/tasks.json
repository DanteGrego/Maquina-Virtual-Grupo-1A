{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "Compilar vmx.exe",
			"command": "C:\\msys64\\ucrt64\\bin\\gcc.exe",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"vmx.c",
				"operaciones.c",
				"dissasembler.c",
				"consts.c",
				"-o",
				"${workspaceFolder}/debug/vmx.exe"
			],
			"options": {
				"cwd": "${workspaceFolder}/source"
			},
			"problemMatcher": [
				"$gcc"
			],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "dedicated",
				"showReuseMessage": true,
				"clear": true
			},
			"group": "build",
			"detail": "compiler: C:\\msys64\\ucrt64\\bin\\gcc.exe"
		},
		{
			"label": "Ejecutar vmx.exe",
			"type": "shell",
			"command": "${workspaceFolder}/debug/vmx.exe",
			"args": [
				"${workspaceFolder}/debug/sample.vmx",
				"-d"
			],
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "shared"
			},
			"dependsOn": [
				"Ejecutar vmt.exe"
			],
			"dependsOrder": "sequence",
			"problemMatcher": []
		},
		{
			"label": "Ejecutar debug vmx.exe",
			"type": "shell",
			"command": "${workspaceFolder}/debug/vmx.exe",
			"args": [
				"${workspaceFolder}/debug/sample.vmx",
				"-d",
				"-dev"
			],
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "shared"
			},
			"dependsOn": [
				"Ejecutar vmt.exe"
			],
			"dependsOrder": "sequence"
		},
		{
			"label": "Ejecutar vmt.exe",
			"type": "shell",
			"command": "${workspaceFolder}/debug/vmt.exe",
			"args": [
				"${workspaceFolder}/debug/test.asm"
			],
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "shared",
				"clear": true
			}
		},
		{
			"label": "Compilar y ejecutar vmx.exe",
			"dependsOn": [
				"Compilar vmx.exe",
				"Ejecutar vmx.exe"
			],
			"dependsOrder": "sequence",
			"group": "none",
			"problemMatcher": []
		},
		{
			"label": "Compilar y ejecutar debug vmx.exe",
			"dependsOn": [
				"Compilar vmx.exe",
				"Ejecutar debug vmx.exe"
			],
			"dependsOrder": "sequence",
			"group": "none",
			"problemMatcher": []
		}
	]
}